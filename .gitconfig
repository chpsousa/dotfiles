[user]
	email = personal@email.com
	name = myname
[alias]
	st = status
	unstage = reset HEAD --
	bs = checkout -b
	goto = checkout
	discard = checkout
	save = stash save
	view = log --pretty=format:'%C(auto,yellow)%h %C(reset)%ad %C(auto,green)<%aE>%x09%C(reset)%s' --date=format:'%d/%m/%Y %H:%M'
	abort-merge = reset --hard HEAD
	fp = !git fetch --prune --tags && git pull
    lp = !git config user.email "personal@email.com"
	l3 = !git config user.email "professional@email.com"
	wip = !git add -u && git commit -m WIP
